
<div class="container-fluid">
  <div class="row">
    <div class="col-sm-6">
      <div id="uneaten">
          <h2>Uneaten Burgers</h2>

          <ul>
          {{#each burgers}}
              {{!-- if burger has not been devoured --}}
              {{#unless devoured}}
                {{!-- render this block --}}
                {{> burgers/burger-block devour=true}}
              {{/unless}}
          {{/each}}
          </ul>
      </div>
    </div>

    <div class="col-sm-6">
      <div id="eaten">
        <h2>Eaten Burgers</h2>

        <ul>
          {{#each burgers}}
            {{!-- if cat is sleep --}}
            {{#if devoured}}
              {{!-- render this block --}}
              {{> burgers/burger-block devour=false}}
            {{/if}}
          {{/each}}
        </ul>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-4">
      <div id="add">
        <h2>Add a Burger</h2>
        <form class="create-form">

          <div class="form-group">
            <label for="ca">Burger Name:</label>
            <input type="text" id="ca" name="name">
          </div>

          <button type="submit">Add</button>
        </form>
      </div>
    </div>
  </div>
</div>
